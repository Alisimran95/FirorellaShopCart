
@{
    ViewData["Title"] = "Basket";
}

@model List<BasketViewModel>;
<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Count</th>
            <th scope="col">Amount</th>
        </tr>
        </thead>
        <tbody>
 
        @foreach (var item in Model)
        {   <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <img src="~/img/@item.Image" style="height: 50px; width: 50px">
                </td>
                <td><a class="btn btn-primary mr-1" asp-controller="Home" asp-action="CountDecrease" asp-route-id="@item.Id">-</a> @item.Count <a class="btn btn-primary ml-1" asp-controller="Home" asp-action="CountIncrease" asp-route-id="@item.Id">+</a></td>
                <td>@item.Amount</td>
                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">delete</a></td>
            </tr>
        }
        </tbody>
    </table>
    <div class="row justify-content-center">
        <div style="float: right">TotalAmount:@ViewBag.totalamount</div>
    </div>
</div>

